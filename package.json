{
  "name": "pomodoro-clock",
  "type": "module",
  "version": "1.5.0",
  "description": "A simple web implementation of a pomodoro timer made using only Bootstrap 4 and JQuery",
  "repository": "https://github.com/FluffyBucketSnake/pomodoro-clock.git",
  "author": "Bruno Henrique Glowaski Morais <fluffybucketsnake@outlook.com>",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@jest/globals": "^27.5.1",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "babel-jest": "^27.5.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "vite": "^2.8.4"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.?(m|c)js?(x)",
      "**/?(*.)(spec|test).?(m|c)js?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "cjs",
      "mjs"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest",
      "^.+.m?js$": "babel-jest"
    },
    "setupFiles": [
      "./setup-jest.js"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "dependencies": {
    "bootstrap": "^4.6.1",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1"
  }
}
